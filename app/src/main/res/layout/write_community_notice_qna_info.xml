<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Write_Community_Notice_Free_Activity"
    android:background="@drawable/background_write">

    <Button
        android:id="@+id/button_qna"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="@drawable/color_orangered_gradient_circle"
        android:backgroundTintMode="screen"
        android:fontFamily="@font/diary"
        android:text="답변 달기"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:backgroundTintMode="screen"
            android:fontFamily="@font/diary"
            android:gravity="center"
            android:text="질문 게시판"
            android:textSize="40dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/qna_info_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/background_food_01" />

        <TextView
            android:id="@+id/write_community_notice_qna_info_title"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="100dp"
            android:hint="제목"
            android:textSize="20dp" />

        <ScrollView
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:textSize="15dp">

            <TextView
                android:id="@+id/write_community_notice_qna_info_script"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="내용을 입력하세요" />

        </ScrollView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>