<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CookBook_Write_Activity"
    android:background="@drawable/background_write">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:text="요리게시판 글쓰기"
            android:textSize="40dp"
            android:gravity="center"
            android:textStyle="bold"
            android:backgroundTintMode="screen"
            android:fontFamily="@font/diary" />

        <ImageView
            android:id="@+id/cook_title_image"
            android:layout_width="350dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#90FFFFFF"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_write_plus_60dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="대표 이미지를 추가하세요"
            android:textSize="30dp"
            android:gravity="center"
            android:textStyle="bold"
            android:backgroundTintMode="screen"
            android:fontFamily="@font/diary"/>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="레시피 한줄요약"
            android:textSize="30dp"
            android:textStyle="bold"
            android:backgroundTintMode="screen"
            android:fontFamily="@font/diary"/>


        <EditText
            android:id="@+id/title_summary"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:hint="한줄로 요약해 레시피를 소개하자면?" />

        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="레시피 제목"
            android:textSize="30dp"
            android:textStyle="bold"
            android:backgroundTintMode="screen"
            android:fontFamily="@font/diary"/>


        <EditText
            android:id="@+id/title"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:hint="레시피의 제목은?" />

        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="레시피 내용"
            android:textSize="30dp"
            android:textStyle="bold"
            android:backgroundTintMode="screen"
            android:fontFamily="@font/diary" />



        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/community_notice_cook_write_pager"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:background="#90FFFFFF"/>
        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_delete"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTintMode="screen"
                android:fontFamily="@font/diary"
                android:text="레시피 페이지 삭제"
                android:textSize="15dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_add"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTintMode="screen"
                android:fontFamily="@font/diary"
                android:text="레시피 페이지 추가"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>



        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="조리 도구"
            android:textSize="30dp"
            android:textStyle="bold"
            android:backgroundTintMode="screen"
            android:fontFamily="@font/diary"/>

        <EditText
            android:id="@+id/tools"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:hint="조리도구를 적어보세요" />

        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="재료"
            android:textSize="30dp"
            android:textStyle="bold"
            android:backgroundTintMode="screen"
            android:fontFamily="@font/diary"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginLeft="30dp"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:background="#90FFFFFF"
            tools:listitem="@layout/item_cookbook_write_source_recycle"/>
        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ingredients"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="재료" />

            <EditText
                android:id="@+id/number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="단위" />

            <Button
                android:id="@+id/ingre_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTintMode="screen"
                android:fontFamily="@font/diary"
                android:text="입력"
                android:textSize="20dp"
                android:textStyle="bold" />


        </LinearLayout>



        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="추가 사진"
            android:textSize="30dp"
            android:textStyle="bold"
            android:backgroundTintMode="screen"
            android:fontFamily="@font/diary"/>


        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_plus_1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#90FFFFFF"
                android:src="@drawable/icon_write_plus_60dp" />

            <ImageView
                android:id="@+id/image_plus_2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#90FFFFFF"
                android:src="@drawable/icon_write_plus_60dp" />

            <ImageView
                android:id="@+id/image_plus_3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#90FFFFFF"
                android:src="@drawable/icon_write_plus_60dp" />

            <ImageView
                android:id="@+id/image_plus_4"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#90FFFFFF"
                android:src="@drawable/icon_write_plus_60dp" />

        </LinearLayout>

        <Button
            android:id="@+id/submit"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/color_orangered_gradient_circle"
            android:backgroundTintMode="screen"
            android:fontFamily="@font/diary"
            android:text="완성하기!!"
            android:textSize="30dp"
            android:textStyle="bold" />










    </LinearLayout>

</ScrollView>