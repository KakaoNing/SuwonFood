<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home_right_cookbook">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="레시피 작성"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/cookbook_edit_add_editView_text"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="한줄소개"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/cookbook_edit_add_editView_edit"
            android:layout_width="353dp"
            android:layout_height="38dp"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/cookbook_edit_add_title_text"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="제목"
            app:layout_constraintStart_toStartOf="@+id/cookbook_edit_add_editView_text"
            app:layout_constraintTop_toBottomOf="@+id/cookbook_edit_add_editView_text" />

        <EditText
            android:id="@+id/cookbook_edit_add_title_edit"
            android:layout_width="353dp"
            android:layout_height="38dp"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="@+id/cookbook_edit_add_editView_edit"
            app:layout_constraintStart_toStartOf="@+id/cookbook_edit_add_editView_edit"
            app:layout_constraintTop_toBottomOf="@+id/cookbook_edit_add_editView_edit"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/cookbook_edit_add_content_text"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="내용"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/cookbook_edit_add_title_text"
            app:layout_constraintTop_toBottomOf="@+id/cookbook_edit_add_title_text"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/cookbook_edit_add_content_edit"
            android:layout_width="353dp"
            android:layout_height="38dp"
            android:inputType="text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/cookbook_edit_add_title_edit"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/cookbook_edit_add_title_text"
            app:layout_constraintTop_toBottomOf="@+id/cookbook_edit_add_title_edit"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>